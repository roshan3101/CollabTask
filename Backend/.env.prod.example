# CollabTask Backend Production Environment Variables
# Copy this to .env.prod and fill in your actual values

# ============================================
# Database Configuration (RDS PostgreSQL)
# ============================================
POSTGRES_DB=collabtask
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_HOST=your-rds-endpoint.rds.amazonaws.com
POSTGRES_PORT=5432

# ============================================
# JWT Configuration
# ============================================
JWT_SECRET_KEY=your_jwt_secret_key_here

# ============================================
# Environment
# ============================================
ENVIRONMENT=production

# ============================================
# Redis Configuration (ElastiCache)
# ============================================
# Note: Remove :6379 from the endpoint if present
REDIS_HOST=your-redis-endpoint.cache.amazonaws.com
REDIS_PORT=6379
REDIS_DB=0

# ============================================
# AWS Configuration
# ============================================
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=eu-north-1
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=CollabTask

# ============================================
# Application Load Balancer DNS
# ============================================
DNS_NAME=your-alb-dns-name.elb.amazonaws.com

# ============================================
# ECR Repository URI
# ============================================
Repository_uri=your-account-id.dkr.ecr.eu-north-1.amazonaws.com/collabtask-backend

# ============================================
# CORS Configuration
# ============================================
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
